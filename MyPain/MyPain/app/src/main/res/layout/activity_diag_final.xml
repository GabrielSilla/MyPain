<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gabriel.mypain.DiagFinal">

    <TextView
        android:id="@+id/pacient_final_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="50dp"
        android:layout_row="2"
        android:layout_weight="1"
        android:text="SetYourText"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/injuries_final_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        android:layout_row="2"
        android:layout_weight="1"
        android:text="SetYourText"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pacient_final_txt" />

    <TextView
        android:id="@+id/diag_ended"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Diagnostico Completo:"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.08" />

    <Button
        android:id="@+id/button_save_diag"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Salvar"
        app:layout_constraintBottom_toTopOf="@+id/button_discart"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/button_discart"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Descartar"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="114dp" />

</android.support.constraint.ConstraintLayout>
